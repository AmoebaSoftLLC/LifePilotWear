<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/Timerbuttonplay"
            android:layout_width="201dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@color/royalPurple"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/TimerPlay"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:elevation="5dp"
            android:foreground="@drawable/play"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/TimerPause"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="2dp"
            android:elevation="5dp"
            android:visibility="gone"
            android:foreground="@drawable/pause"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

        <Button
            android:id="@+id/iTimerResetbutton"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_marginStart="78dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="@drawable/reset"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.705" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="172dp"
            android:layout_height="39dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="58dp"
            android:text="00:00:00:000"
            android:gravity="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/Timerbuttonplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>