<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timerlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/timerlayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gradientblackbackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tempback1"
            android:layout_width="38dp"
            android:layout_height="27dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="temp"
            android:textSize="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.227"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:hint="18:03"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/timerlayout3"
            app:layout_constraintStart_toStartOf="@+id/timerlayout3"
            app:layout_constraintTop_toTopOf="@+id/timerlayout3" />

        <Button
            android:id="@+id/Timerbuttonplay"
            android:layout_width="201dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@color/royalPurple"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/TimerPlay"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:elevation="5dp"
            android:foreground="@drawable/play"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/TimerPause"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:elevation="5dp"
            android:foreground="@drawable/pause"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/TimerResetbutton"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_marginStart="78dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="@drawable/reset"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.705" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="172dp"
            android:layout_height="39dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="58dp"
            android:gravity="center"
            android:text="00:00:00:000"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/Timerbuttonplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>